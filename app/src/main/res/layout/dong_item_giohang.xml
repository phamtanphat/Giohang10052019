<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/imageviewGiohang"
            android:layout_margin="5dp"
            android:layout_width="150dp"
            android:layout_height="120dp" />
        <TextView
            android:id="@+id/textviewGiohangTendienthoai"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/imageviewGiohang"
            android:textStyle="bold"
            android:textColor="#f20"
            android:textSize="25sp"
            android:text="Iphone 8 plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textviewGiohangGiadienthoai"
            android:layout_margin="5dp"
            android:layout_below="@id/textviewGiohangTendienthoai"
            android:layout_toRightOf="@id/imageviewGiohang"
            android:textStyle="italic"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="Iphone 8 plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/imageviewGiohangMinus"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imageviewGiohang"
            android:layout_below="@id/textviewGiohangGiadienthoai"
            android:src="@drawable/ic_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textviewGiohangSoluongdienthoai"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/textviewGiohangGiadienthoai"
            android:layout_toRightOf="@id/imageviewGiohangMinus"
            android:textStyle="italic"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/imageviewGiohangPlus"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/textviewGiohangSoluongdienthoai"
            android:layout_below="@id/textviewGiohangGiadienthoai"
            android:src="@drawable/ic_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>